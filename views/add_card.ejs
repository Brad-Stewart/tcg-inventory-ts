<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Card - PackRat</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">üêÄ PackRat</a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/"><i class="fas fa-home"></i> Dashboard</a>
                <a class="nav-link active" href="/add_card"><i class="fas fa-plus"></i> Add Card</a>
                <a class="nav-link" href="/collections"><i class="fas fa-folder-open"></i> Collections</a>
                <a class="nav-link" href="/alerts"><i class="fas fa-bell"></i> Alerts</a>
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                        <i class="fas fa-user"></i> <%= session.user_email %>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <!-- Flash Messages -->
        <% if (flash && flash.error && flash.error.length > 0) { %>
            <% flash.error.forEach(message => { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= message %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% }); %>
        <% } %>
        <% if (flash && flash.success && flash.success.length > 0) { %>
            <% flash.success.forEach(message => { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= message %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% }); %>
        <% } %>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h3 class="mb-0"><i class="fas fa-plus"></i> Add New Card</h3>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/add_card">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="card_name" class="form-label">Card Name *</label>
                                    <input type="text" class="form-control" id="card_name" name="card_name" required 
                                           placeholder="Enter card name..." autocomplete="off">
                                    <div id="cardSuggestions" class="dropdown-menu" style="display: none; width: 100%;"></div>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label for="set_name" class="form-label">Set Name</label>
                                    <input type="text" class="form-control" id="set_name" name="set_name" 
                                           placeholder="e.g., Modern Horizons 2">
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label for="set_code" class="form-label">Set Code</label>
                                    <input type="text" class="form-control" id="set_code" name="set_code" 
                                           placeholder="e.g., MH2" maxlength="5">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-3 mb-3">
                                    <label for="collector_number" class="form-label">Collector Number</label>
                                    <input type="text" class="form-control" id="collector_number" name="collector_number" 
                                           placeholder="e.g., 123">
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label for="quantity" class="form-label">Quantity</label>
                                    <input type="number" class="form-control" id="quantity" name="quantity" 
                                           min="1" value="1">
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label for="condition" class="form-label">Condition</label>
                                    <select class="form-select" id="condition" name="condition">
                                        <option value="Near Mint" selected>Near Mint</option>
                                        <option value="Lightly Played">Lightly Played</option>
                                        <option value="Moderately Played">Moderately Played</option>
                                        <option value="Heavily Played">Heavily Played</option>
                                        <option value="Damaged">Damaged</option>
                                    </select>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label for="purchase_price" class="form-label">Purchase Price</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="number" class="form-control" id="purchase_price" name="purchase_price" 
                                               min="0" step="0.01" value="0.00">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="is_foil" name="is_foil" value="1">
                                        <label class="form-check-label" for="is_foil">
                                            <i class="fas fa-star"></i> Foil
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                        <a href="/" class="btn btn-secondary me-md-2">
                                            <i class="fas fa-times"></i> Cancel
                                        </a>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-plus"></i> Add Card
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Card Preview (if available) -->
                <div id="cardPreview" class="card mt-4" style="display: none;">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-eye"></i> Card Preview</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <img id="previewImage" src="" class="img-fluid" alt="Card Preview" style="max-width: 200px;">
                            </div>
                            <div class="col-md-9">
                                <h4 id="previewName"></h4>
                                <p><strong>Set:</strong> <span id="previewSet"></span></p>
                                <p><strong>Rarity:</strong> <span id="previewRarity"></span></p>
                                <p><strong>Type:</strong> <span id="previewType"></span></p>
                                <p><strong>Mana Cost:</strong> <span id="previewManaCost"></span></p>
                                <p><strong>Current Price:</strong> 
                                   <span id="previewPriceRegular" class="me-3"></span>
                                   <span id="previewPriceFoil"></span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        let searchTimeout;
        const cardNameInput = document.getElementById('card_name');
        const suggestionDropdown = document.getElementById('cardSuggestions');
        const cardPreview = document.getElementById('cardPreview');

        // Card name autocomplete
        cardNameInput.addEventListener('input', function() {
            const query = this.value.trim();
            
            if (query.length < 2) {
                hideSuggestions();
                return;
            }

            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => {
                searchCards(query);
            }, 300);
        });

        function searchCards(query) {
            fetch(`/api/search_cards?q=${encodeURIComponent(query)}`)
                .then(response => response.json())
                .then(cards => {
                    showSuggestions(cards);
                })
                .catch(error => {
                    console.error('Card search error:', error);
                    hideSuggestions();
                });
        }

        function showSuggestions(cards) {
            if (cards.length === 0) {
                hideSuggestions();
                return;
            }

            suggestionDropdown.innerHTML = '';
            
            cards.forEach(card => {
                const item = document.createElement('a');
                item.className = 'dropdown-item d-flex align-items-center';
                item.href = '#';
                item.innerHTML = `
                    <div class="me-2">
                        ${card.image_url ? `<img src="${card.image_url}" class="card-img-thumbnail" style="width: 30px; height: auto;">` : ''}
                    </div>
                    <div>
                        <div class="fw-bold">${card.name}</div>
                        <small class="text-muted">${card.set_name} (${card.set}) - ${card.rarity}</small>
                    </div>
                `;

                item.addEventListener('click', (e) => {
                    e.preventDefault();
                    selectCard(card);
                });

                suggestionDropdown.appendChild(item);
            });

            suggestionDropdown.style.display = 'block';
        }

        function hideSuggestions() {
            suggestionDropdown.style.display = 'none';
        }

        function selectCard(card) {
            // Fill form fields
            document.getElementById('card_name').value = card.name;
            document.getElementById('set_name').value = card.set_name;
            document.getElementById('set_code').value = card.set;
            document.getElementById('collector_number').value = card.collector_number;

            // Show preview
            showCardPreview(card);

            hideSuggestions();
        }

        function showCardPreview(card) {
            document.getElementById('previewName').textContent = card.name;
            document.getElementById('previewSet').textContent = card.set_name;
            document.getElementById('previewRarity').textContent = card.rarity;
            document.getElementById('previewType').textContent = card.type_line;
            document.getElementById('previewManaCost').textContent = card.mana_cost || 'N/A';
            
            if (card.image_url) {
                const img = document.getElementById('previewImage');
                img.src = card.image_url;
                img.style.display = 'block';
            }

            // Prices
            const regularPrice = card.prices?.usd ? `Regular: $${card.prices.usd}` : 'Regular: N/A';
            const foilPrice = card.prices?.usd_foil ? `Foil: $${card.prices.usd_foil}` : 'Foil: N/A';
            
            document.getElementById('previewPriceRegular').textContent = regularPrice;
            document.getElementById('previewPriceFoil').textContent = foilPrice;

            cardPreview.style.display = 'block';
        }

        // Hide suggestions when clicking outside
        document.addEventListener('click', function(event) {
            if (!cardNameInput.contains(event.target) && !suggestionDropdown.contains(event.target)) {
                hideSuggestions();
            }
        });

        // Hide suggestions on escape key
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                hideSuggestions();
            }
        });
    </script>
</body>
</html>