<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - PackRat</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card mt-5">
                    <div class="card-header bg-primary text-white text-center">
                        <h3><i class="fas fa-paw"></i> PackRat Login</h3>
                    </div>
                    <div class="card-body">
                        <!-- Flash Messages -->
                        <% if (flash && flash.error && flash.error.length > 0) { %>
                            <% flash.error.forEach(message => { %>
                                <div class="alert alert-danger" role="alert">
                                    <%= message %>
                                </div>
                            <% }); %>
                        <% } %>

                        <% if (flash && flash.success && flash.success.length > 0) { %>
                            <% flash.success.forEach(message => { %>
                                <div class="alert alert-success" role="alert">
                                    <%= message %>
                                </div>
                            <% }); %>
                        <% } %>

                        <form method="POST" action="/login">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="email" required>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control" id="password" name="password" required>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        <p>Don't have an account? <a href="/register">Sign up here</a></p>
                    </div>
                </div>
                
                <div class="card mt-3">
                    <div class="card-body">
                        <h6 class="card-title">Default Admin Account</h6>
                        <p class="card-text small text-muted">
                            Email: admin@packrat.local<br>
                            Password: packrat123
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>